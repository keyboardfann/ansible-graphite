listen  stats
    mode http
    bind 0.0.0.0:8090           
    stats enable                
    stats refresh 3s            
    stats hide-version          
    stats uri   /stats
    stats realm Haproxy\ ITSA  
    stats auth  {{ stats_account }}:{{ stats_password }}
    stats admin if TRUE   

{% for item in LB %}
listen {{ item.listen_name }}
{% if item.protocol=="TCP" %}
    mode tcp
    bind {{ item.bind_ip }}:{{ item.bind_port }}
    maxconn {{ item.maxconnection }}
    option tcplog
    option dontlognull
    option redispatch
    retries 3
    option log-health-checks
    balance roundrobin
{% for realserver in item.realserver %}
    server {{ realserver }} check
{% endfor %}
{% endif %}
{% if item.protocol=="HTTP" %}
    mode http
    bind {{ item.bind_ip }}:{{ item.bind_port }}
    maxconn {{ item.maxconnection }}
    option redispatch
    retries 3
    option log-health-checks
    balance roundrobin
    option httpclose
{% for realserver in item.realserver %}
    server {{ realserver }} check
{% endfor %}
{% endif%}
{% endfor %}
